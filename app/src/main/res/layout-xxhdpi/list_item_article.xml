<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:padding="4dp" />

    <CheckBox
        android:id="@+id/article_list_item_readed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:enabled="false"
        android:focusable="false"
        android:padding="4dp"
        android:text="@string/fragment_readed"/>

    <TextView
        android:id="@+id/article_list_item_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/thumbnail"
        android:layout_toLeftOf="@id/article_list_item_readed"
        android:textSize="14sp"
        android:textStyle="bold"
        android:padding="1dp" />

    <TextView
        android:id="@+id/article_list_item_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/thumbnail"
        android:layout_toLeftOf="@id/article_list_item_readed"
        android:layout_below="@id/article_list_item_title"
        android:textSize="12sp"
        android:padding="1dp" />

    <TextView
        android:id="@+id/article_list_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/article_list_item_title"
        android:layout_below="@id/article_list_item_readed"
        android:textSize="12sp"
        android:padding="1dp" />

</RelativeLayout>
